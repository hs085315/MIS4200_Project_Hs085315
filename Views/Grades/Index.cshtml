@model IEnumerable<MIS4200_Project_Hs085315.Models.Grade>

@{
    ViewBag.Title = "Index";
}

<h2>Course Grades <span class="glyphicon glyphicon-folder-open"></span></h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.studentFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.courseGrade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.studentFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.courseGrade)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.gradeId }) |
            @Html.ActionLink("Details", "Details", new { id = item.gradeId })
            <span class="glyphicon glyphicon-eye-open"></span>||
            @Html.ActionLink("Delete", "Delete", new { id = item.gradeId })
        </td>
    </tr>
}

</table>
