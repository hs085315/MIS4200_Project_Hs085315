@model IEnumerable<MIS4200_Project_Hs085315.Models.Course>

@{
    ViewBag.Title = "";
}

<h2>Courses Offered <span class="glyphicon glyphicon-education"></span></h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.description)

        </th>
        <th>

            @Html.DisplayNameFor(model => model.courseDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.courseDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.courseId }) |
            @Html.ActionLink("Details", "Details", new { id = item.courseId })
            <span class="glyphicon glyphicon-eye-open"></span>||
            @Html.ActionLink("Delete", "Delete", new { id = item.courseId })
        </td>
    </tr>
}

</table>
